/*
 * 右手のみで完結する導通テスト用キーマップ
 * roBa_R（右側）単体で動作
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        test_layer {
            label = "TEST";
            bindings = <
// 左側（ダミー）
// ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
     &none          &none          &none          &none          &none          &none
// ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
     &none          &none          &none          &none          &none          &none
// ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
     &none          &none          &none          &none          &none          &none
// ╰──────────────┴──────────────┴──────────────┼──────────────┼──────────────┼──────────────┤
                                                   &none          &none          &none

// 右側（テスト用キー配置）
// ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
     &kp N1         &kp N2         &kp N3         &kp N4         &kp N5         &kp N6
// ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
     &kp N7         &kp N8         &kp N9         &kp N0         &kp S          &kp E
// ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
     &kp H          &kp L          &kp COMMA      &kp DOT        &bt BT_CLR     &bt BT_SEL 0
// ├──────────────┼──────────────┼──────────────┼──────────────┴──────────────┴──────────────╯
     &kp SPACE      &kp ENTER      &kp T
// ╰──────────────┴──────────────┴──────────────╯
            >;
        };
    };
};